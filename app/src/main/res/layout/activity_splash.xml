<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.ensharp.haxi.SplashActivity"
    android:background="#f5b019">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5b019"
        sl:scale_base_width="1080"
        sl:scale_base_height="1730">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgae_iseoulu"
            android:src="@drawable/iseoulu"
            sl:scale_left="390"
            sl:scale_top="1620"
            sl:scale_width="300"
            sl:scale_height="90" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_splash_taxi"
            android:src="@drawable/image_taxi"
            sl:scale_left="270"
            sl:scale_top="230"
            sl:scale_width="550"
            sl:scale_height="500" />

    </com.ssomai.android.scalablelayout.ScalableLayout>
</RelativeLayout>
