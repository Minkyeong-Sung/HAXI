<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.ensharp.haxi.UcRunningActivity"
    android:background="#ff000000">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        sl:scale_base_width="1080"
        sl:scale_base_height="1730">

        <fragment
            android:id="@+id/gmap"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_left="0"
            sl:scale_top="0"
            sl:scale_width="1080"
            sl:scale_height="1300" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/running_guide_text"
            android:id="@+id/image_running_guide"
            sl:scale_left="90"
            sl:scale_top="1300"
            sl:scale_width="900"
            sl:scale_height="300" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목적지에 도착하셨다면 눌러주세요"
            android:background="@drawable/black_round_button"
            android:id="@+id/btn_arrive"
            sl:scale_left="150"
            sl:scale_top="1600"
            sl:scale_width="800"
            sl:scale_height="100"
            sl:scale_textsize="40"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_taxifare"
            sl:scale_left="490"
            sl:scale_top="1490"
            sl:scale_width="250"
            sl:scale_height="80"
            sl:scale_textsize="50"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:gravity="center" />

    </com.ssomai.android.scalablelayout.ScalableLayout>
</RelativeLayout>
