<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.ensharp.haxi.UcRunningActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gmap"
        android:layout_above="@+id/runningFirstScalable"
        class="com.google.android.gms.maps.MapFragment" />

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/runningFirstScalable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        sl:scale_base_width="1080"
        sl:scale_base_height="400" >

        <Button
            android:id="@+id/btn_arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_round_button"
            android:text="@string/arrive"
            android:textColor="#FFFFFF"
            sl:scale_left="40"
            sl:scale_top="280"
            sl:scale_width="1000"
            sl:scale_height="100"
            sl:scale_textsize="40" />

        <com.ensharp.haxi.CustomFont
            android:id="@+id/text_taxifare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF9800"
            sl:scale_left="460"
            sl:scale_top="180"
            sl:scale_width="300"
            sl:scale_height="80"
            sl:scale_textsize="70" />

        <com.ensharp.haxi.CustomFont
            android:text="@string/auto_checking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_left="0"
            sl:scale_top="20"
            sl:scale_width="1080"
            sl:scale_height="80"
            sl:scale_textsize="50"
            android:gravity="center"
            android:textColor="#000000"/>

        <com.ensharp.haxi.CustomFont
            android:text="@string/after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_left="0"
            sl:scale_top="100"
            sl:scale_width="1080"
            sl:scale_height="80"
            sl:scale_textsize="50"
            android:gravity="center"
            android:textColor="#000000"/>

        <com.ensharp.haxi.CustomFont
            android:text="@string/excepting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_left="0"
            sl:scale_top="180"
            sl:scale_width="1080"
            sl:scale_height="80"
            sl:scale_textsize="50"
            android:gravity="center"
            android:textColor="#000000"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>

</RelativeLayout>
