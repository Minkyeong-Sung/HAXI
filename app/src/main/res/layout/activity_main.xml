<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.ensharp.haxi.MainActivity"
    android:background="@drawable/main_background_2">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background_2"
        sl:scale_base_width="1080"
        sl:scale_base_height="1730" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/haxi_logo_white"
            android:id="@+id/imageView"
            sl:scale_left="290"
            sl:scale_top="150"
            sl:scale_width="500"
            sl:scale_height="500" />

        <Button
            android:text="시작하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_haxi"
            android:background="@drawable/roundedbutton"
            sl:scale_left="200"
            sl:scale_top="1400"
            sl:scale_width="700"
            sl:scale_height="120"
            sl:scale_textsize="50" />

        <Button
            android:text="International Taxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_internationalTaxi"
            android:background="@drawable/roundedbutton"
            sl:scale_left="200"
            sl:scale_top="1550"
            sl:scale_width="700"
            sl:scale_height="120"
            sl:scale_textsize="50" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
</RelativeLayout>
