<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.ensharp.haxi.UcResultActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image_map"
        android:layout_above="@+id/scalableLayout"
        android:background="#F5F5F5"/>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/scalableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        sl:scale_base_width="1080"
        sl:scale_base_height="400"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_good"
            android:id="@+id/btn_success"
            android:background="@drawable/green_line_button"
            sl:scale_left="30"
            sl:scale_top="280"
            sl:scale_width="500"
            sl:scale_height="100"
            sl:scale_textsize="40"
            android:textColor="#000000"
            android:gravity="center" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_strage"
            android:id="@+id/btn_notify"
            android:background="@drawable/red_line_button"
            sl:scale_left="550"
            sl:scale_top="280"
            sl:scale_width="500"
            sl:scale_height="100"
            sl:scale_textsize="40"
            android:textColor="#000000"
            android:gravity="center"/>

        <TextView
            android:text="@string/checking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/result_guideText"
            sl:scale_left="250"
            sl:scale_top="30"
            sl:scale_width="580"
            sl:scale_height="80"
            sl:scale_textsize="50"
            android:gravity="center"
            android:textColor="#000000"/>

        <TextView
            android:text="@string/excepting_tex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/result_guideText_2"
            sl:scale_left="100"
            sl:scale_top="110"
            sl:scale_width="880"
            sl:scale_height="80"
            sl:scale_textsize="50"
            android:gravity="center"
            android:textColor="#000000"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/attention"
            sl:scale_left="175"
            sl:scale_top="200"
            sl:scale_width="50"
            sl:scale_height="50" />

        <TextView
            android:text="@string/tex_warning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            sl:scale_left="225"
            sl:scale_top="200"
            sl:scale_width="680"
            sl:scale_height="50"
            sl:scale_textsize="30"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/result_taxiFare"
            sl:scale_left="390"
            sl:scale_top="90"
            sl:scale_width="350"
            sl:scale_height="100"
            sl:scale_textsize="80"
            android:textColor="#F95731"
            android:gravity="center" />

    </com.ssomai.android.scalablelayout.ScalableLayout>
</RelativeLayout>
