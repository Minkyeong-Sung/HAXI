<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.ensharp.haxi.UcResultActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        sl:scale_base_width="1080"
        sl:scale_base_height="1730"
        android:id="@+id/scalableLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_temp"
            android:id="@+id/image_map"
            sl:scale_left="0"
            sl:scale_top="0"
            sl:scale_width="1080"
            sl:scale_height="850" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/result_guid_text"
            android:id="@+id/imageView"
            sl:scale_left="90"
            sl:scale_top="870"
            sl:scale_width="900"
            sl:scale_height="700" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="비슷해요"
            android:id="@+id/btn_success"
            android:background="@drawable/black_round_button"
            sl:scale_left="100"
            sl:scale_top="1600"
            sl:scale_width="400"
            sl:scale_height="100"
            sl:scale_textsize="40"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
        //android:textColor="#4CAF50"

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="이상해요"
            android:id="@+id/btn_notify"
            android:background="@drawable/black_round_button"
            sl:scale_left="550"
            sl:scale_top="1600"
            sl:scale_width="400"
            sl:scale_height="100"
            sl:scale_textsize="40"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        //android:textColor="#F44336"

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="0"
            android:id="@+id/running_hour"
            sl:scale_left="360"
            sl:scale_top="960"
            sl:scale_width="100"
            sl:scale_height="100"
            sl:scale_textsize="50"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="00"
            android:id="@+id/running_minute"
            sl:scale_left="520"
            sl:scale_top="960"
            sl:scale_width="115"
            sl:scale_height="100"
            sl:scale_textsize="50"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="00"
            android:id="@+id/running_second"
            sl:scale_left="655"
            sl:scale_top="960"
            sl:scale_width="115"
            sl:scale_height="100"
            sl:scale_textsize="50"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/running_taxi_fare"
            android:text="10000"
            sl:scale_left="475"
            sl:scale_top="1050"
            sl:scale_width="250"
            sl:scale_height="80"
            sl:scale_textsize="50"
            android:textStyle="bold"
            android:textColor="#FF9800"
            android:gravity="center" />

    </com.ssomai.android.scalablelayout.ScalableLayout>
</RelativeLayout>
