<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ensharp.haxi.UcMainActivity"
    android:background="#000000">

    <fragment
        android:id="@+id/gmap"
        android:layout_width="100dp"
        android:layout_height="100dp"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textView2" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:text="안내문구가 들어갈 공간"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20dp"
        android:layout_above="@+id/start_input"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="탑승을 완료했어요"
        android:id="@+id/btn_CompleteBoarding"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="출발지"
        android:id="@+id/start_input"
        android:gravity="center"
        android:layout_above="@+id/btn_CompleteBoarding"
        android:textSize="20dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/start_btn"
        android:layout_alignTop="@+id/start_input"
        android:layout_toEndOf="@+id/start_input" />

    <EditText
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="도착지"
        android:id="@+id/destination_input"
        android:gravity="center"
        android:layout_alignTop="@+id/start_btn"
        android:layout_toEndOf="@+id/start_btn" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/destination_btn"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/destination_input" />

    <Button
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/current_location_btn"
        android:layout_above="@+id/btn_CompleteBoarding"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
