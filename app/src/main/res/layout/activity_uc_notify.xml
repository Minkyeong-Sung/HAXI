<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".UcNotifyActivity"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:weightSum="10">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF9800"
        android:layout_above="@+id/notify_guideScalable"/>

    <com.ensharp.haxi.CustomFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="@string/text1"
        android:gravity="center"
        android:textSize="23sp"
        android:layout_marginTop="30dp"/>

    <com.ensharp.haxi.CustomFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#B71C1C"
        android:text="@string/text2"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="87dp"
        android:textStyle="bold"/>

    <com.ensharp.haxi.CustomFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="@string/text3"
        android:gravity="center"
        android:textSize="23sp"
        android:layout_marginTop="150dp"/>

    <com.ensharp.haxi.CustomFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="@string/text4"
        android:gravity="center"
        android:textSize="23sp"
        android:layout_marginTop="200dp"/>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5"
        sl:scale_base_width="1080"
        sl:scale_base_height="1200" >

        // @string/text4 : 이 부분이 신고를 위해 몇가지 정보가 필요합니다 부분

        <com.ensharp.haxi.CustomFont
            android:text="이름"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_left="100"
            sl:scale_top="130"
            sl:scale_width="100"
            sl:scale_height="60"
            sl:scale_textsize="43"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/smsText"
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:hint="@string/smsText"
            android:scrollbars="vertical"
            android:layout_gravity="center_horizontal"
            sl:scale_left="0"
            sl:scale_top="170"
            sl:scale_width="900"
            sl:scale_height="120"
            sl:scale_textsize="50" />

        <com.ensharp.haxi.CustomFont
            android:text="휴대폰"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_left="100"
            sl:scale_top="350"
            sl:scale_width="150"
            sl:scale_height="60"
            sl:scale_textsize="43"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/edit_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:gravity="top"
            android:hint="@string/edit_phoneNum"
            android:scrollbars="vertical"
            android:layout_gravity="center_horizontal"
            sl:scale_left="0"
            sl:scale_top="390"
            sl:scale_width="900"
            sl:scale_height="120"
            sl:scale_textsize="50"
            android:focusableInTouchMode="false"/>

        <com.ensharp.haxi.CustomFont
            android:text="주소"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_left="100"
            sl:scale_top="570"
            sl:scale_width="100"
            sl:scale_height="60"
            sl:scale_textsize="43"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/smsText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/smsText3"
            android:scrollbars="vertical"
            android:layout_gravity="center_horizontal"
            sl:scale_left="0"
            sl:scale_top="610"
            sl:scale_width="900"
            sl:scale_height="120"
            sl:scale_textsize="50"/>

        <com.ensharp.haxi.CustomFont
            android:text="예시 : 서울시 광진구 광나루로 369 102동 101호 (도로명 주소) "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_left="100"
            sl:scale_top="730"
            sl:scale_width="980"
            sl:scale_height="40"
            sl:scale_textsize="31"
            android:textColor="#000000"/>

        <com.ensharp.haxi.CustomFont
            android:text="          (서울시 광진구 군자동 503 102동 101호 (기존 주소)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_left="100"
            sl:scale_top="770"
            sl:scale_width="980"
            sl:scale_height="40"
            sl:scale_textsize="31"
            android:textColor="#000000"/>

        <com.ensharp.haxi.CustomFont
            android:text="           외국인일 경우 현재 숙박중인 주소를 입력하세요"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            sl:scale_left="100"
            sl:scale_top="810"
            sl:scale_width="980"
            sl:scale_height="40"
            sl:scale_textsize="31"
            android:textColor="#000000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_next1"
            android:textColor="#FFFFFF"
            android:id="@+id/btn_next"
            android:background="@drawable/black_round_button"
            sl:scale_left="50"
            sl:scale_top="980"
            sl:scale_width="980"
            sl:scale_height="100"
            sl:scale_textsize="50" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_weight="0.5"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        sl:scale_base_width="900"
        sl:scale_base_height="120"
        android:id="@+id/scalableLayout2">

        <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:onClick="sendSMS"-->
        <!--android:text="Send"-->
        <!--sl:scale_left="0"-->
        <!--sl:scale_top="50"-->
        <!--sl:scale_width="900"-->
        <!--sl:scale_height="150"-->
        <!--sl:scale_textsize="50" />-->



    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/notify_guideScalable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        sl:scale_base_width="1080"
        sl:scale_base_height="1200"
        android:layout_alignBottom="@+id/scalableLayout2"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:text="@string/text1"
            sl:scale_left="0"
            sl:scale_top="100"
            sl:scale_width="1080"
            sl:scale_height="100"
            android:gravity="center"
            sl:scale_textsize="45"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text2"
            sl:scale_left="0"
            sl:scale_top="200"
            sl:scale_width="1080"
            sl:scale_height="100"
            android:gravity="center"
            android:textColor="#F95731"
            sl:scale_textsize="50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text3"
            sl:scale_left="0"
            sl:scale_top="300"
            sl:scale_width="1080"
            sl:scale_height="100"
            android:gravity="center"
            sl:scale_textsize="45" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
</RelativeLayout>